        android:theme="@style/MyMaterialTheme">
        <activity android:name=".activities.PlacesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PlaceViewActivity"
            android:label="@string/title_activity_place"
            android:theme="@style/MyMaterialTheme">

        </activity>
        <activity android:name=".activities.FeedbackActivity" />
        <activity android:name=".activities.ZomatoWebviewActivity">

        </activity>
        <activity android:name=".activities.PlaceImagesActivity">

        </activity>
    </application>

</manifest>
